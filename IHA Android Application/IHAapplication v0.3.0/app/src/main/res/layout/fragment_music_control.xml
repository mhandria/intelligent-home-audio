<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michaelhandria.ihaapplicationv030.MusicControl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/prevButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skip_previous"
                android:fontFamily="@font/icon"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"/>
            <TextView
                android:id="@+id/playPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play_arrow"
                android:fontFamily="@font/icon"
                android:textColor="#ffffff"
                android:textSize="50dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skip_next"
                android:fontFamily="@font/icon"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Playing Anything"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
