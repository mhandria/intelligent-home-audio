<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="handria.com.iha_application.MusicPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:text="status: Connected"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/replay"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/icon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/lastPlaying"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/skip_previous"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:fontFamily="@font/icon"
                    android:layout_marginRight="30dp"/>
                <TextView
                    android:id="@+id/musicControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/play_arrow"
                    android:textColor="#ffffff"
                    android:textSize="70dp"
                    android:onClick="playMusic"
                    android:fontFamily="@font/icon"/>

                <TextView
                    android:id="@+id/nextPlaying"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/skip_next"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:fontFamily="@font/icon"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingBottom="20dp"
            android:gravity="center">
            <TextView
                android:id="@+id/currentPlayingBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="nothing playing currently"
                android:maxLines="1"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <TableLayout
                android:id="@+id/songList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
            </TableLayout>
        </ScrollView>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
