<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="handria.com.iha_application.HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Something"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="40dp"
            android:fontFamily="@font/lecker"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="Play A"
                    android:textAllCaps="false"
                    android:onClick="playA"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="Play B"
                    android:textAllCaps="false"
                    android:onClick="playB"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="50dp">
            <TextView
                android:id="@+id/ipName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local IP NAME: --"/>
            <TextView
                android:id="@+id/exIpName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="External IP NAME: --"/>

        </LinearLayout>
        <Button
            android:onClick="goCustom"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="custom cmd"
            android:layout_marginBottom="50dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
